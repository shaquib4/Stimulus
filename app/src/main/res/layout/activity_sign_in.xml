<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@color/Black1">

    <TextView
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/txtLogin"
        android:textSize="@dimen/_32sdp"
        android:text="Login"/>


    <LinearLayout
        android:layout_below="@id/txtLogin"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/_12sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Log in with one of the following options"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="start"
            android:textColor="@color/gray"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/_45sdp"
          android:orientation="horizontal"
            android:layout_marginTop="@dimen/_12sdp">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_google"
              android:layout_weight="1"
              android:layout_marginRight="@dimen/_12sdp"
              android:background="@drawable/google_icon_bg"
              style="?android:buttonBarButtonStyle"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_google"
              android:layout_weight="1"
              android:layout_marginLeft="@dimen/_12sdp"
              android:background="@drawable/google_icon_bg"
              style="?android:buttonBarButtonStyle"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" Email"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:id="@+id/email"
            android:background="@drawable/edit_text_bg"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/_8sdp"
            android:hint="email"
            android:textColorHint="#6D6968"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" Password"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textColor="@color/white"/>


        <EditText

            android:layout_width="match_parent"
            android:layout_height="@dimen/_42ssp"
            android:id="@+id/password"
            android:background="@drawable/edit_text_bg"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColorHint="#6D6968"
            android:hint="Password"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Forgot your password?"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:id="@+id/forgotPassword"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:text="Login"
            android:textSize="@dimen/_18ssp"
            android:textAllCaps="false"
            android:id="@+id/btn_login"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:drawablePadding="@dimen/_40sdp"
            android:layout_gravity="left"

            android:background="@drawable/btn_bg"
            android:layout_marginTop="@dimen/_35sdp"
            android:textColor="#fff"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center">
          <TextView
              android:id="@+id/dont_account"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="Don't have a account?"
              android:layout_marginTop="@dimen/_10sdp"
              android:textStyle="bold"
              android:textColor="@color/white"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="SignUp"
              android:layout_marginTop="@dimen/_10sdp"
              android:layout_toEndOf="@id/dont_account"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:layout_marginStart="@dimen/_5sdp"/>
      </RelativeLayout>
    </LinearLayout>

</RelativeLayout>